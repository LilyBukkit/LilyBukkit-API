<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ru.vladthemountain</groupId>
  <artifactId>lilybukkit-api</artifactId>
  <name>LilyBukkit-API</name>
  <version>2.0.0</version>
  <url>https://lilybukkit.github.io/</url>
  <scm>
    <connection>scm:git:git://github.com/LilyBukkit/LilyBukkit-API.git</connection>
    <developerConnection>scm:git:git@github.com:LilyBukkit/LilyBukkit-API.git</developerConnection>
    <url>https://github.com/LilyBukkit/LilyBukkit-API/tree/master/</url>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.10.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.3.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <distributionManagement>
    <repository>
      <id>github</id>
      <name>GitHub LilyBukkit Apache Maven Packages</name>
      <url>https://maven.pkg.github.com/LilyBukkit/LilyBukkit-API</url>
    </repository>
  </distributionManagement>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
